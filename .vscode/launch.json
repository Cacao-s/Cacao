{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Expo: Web",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start",
        "--workspace=apps/mobile",
        "--",
        "--clear"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Expo: Web (No Cache Clear)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start",
        "--workspace=apps/mobile"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Expo: Android",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "android",
        "--workspace=apps/mobile"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Expo: iOS",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "ios",
        "--workspace=apps/mobile"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ]
}
