{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Expo: Web (Expo Go for ios)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start",
        "--workspace=apps/mobile",
        "--",
        "--clear"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Expo: Web (No Cache Clear)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start",
        "--workspace=apps/mobile"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Expo: Android",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "android",
        "--workspace=apps/mobile"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
      // ⚠️ iOS 模擬器只能在 macOS 上運行
      // Windows 用戶請使用:
      // 1. 實體 iPhone + Expo Go app (掃描 QR code)
      // 2. EAS Build 雲端編譯 (eas build -p ios)
    {
      "name": "Expo: iOS",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "ios",
        "--workspace=apps/mobile"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ]
}
